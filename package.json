{
  "name": "quark-desktop",
  "version": "1.1.0",
  "description": "Professional API Testing Desktop Application",
  "main": "app/main/index.js",
  "scripts": {
    "start": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:renderer": "cd app/renderer && npm run dev",
    "build:renderer": "cd app/renderer && npm run build",
    "build": "npm run build:renderer && electron-builder",
    "electron": "electron ."
  },
  "dependencies": {
    "axios": "^1.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "api",
    "testing",
    "quark",
    "electron",
    "rest-client",
    "desktop-app"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.quarkdesktop.app",
    "productName": "Quark Desktop",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "app/assets/quark.png"
    },
    "win": {
      "icon": "app/assets/quark.ico"
    },
    "linux": {
      "icon": "app/assets/quark.png"
    }
  }
}